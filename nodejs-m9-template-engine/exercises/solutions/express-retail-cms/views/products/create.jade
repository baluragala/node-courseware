extends ../layout

block content
    form(method='post', name='add-product')
        .form-group
            label(for='title') Product Title:
            input#title.form-control(type='text', name="title")
        .form-group
            label(for='price') Price:
            input#price.form-control(type='number', name="price")
        .form-group
            label(for='stock') Stock:
            input#stock.form-control(type='number', name="stock")
        button.btn.btn-success(type='submit') Add
